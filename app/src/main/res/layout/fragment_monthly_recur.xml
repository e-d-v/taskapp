<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MonthlyRecurFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/monthlySubheader"
            style="@style/subheader"
            android:labelFor="@id/monthsBetween"
            android:text="@string/monthly_recur_prompt"/>

        <EditText
            android:id="@+id/monthsBetween"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:inputType="number"
            android:text="1"
            android:textSize="@dimen/subheader_height"
            tools:ignore="HardcodedText,SpUsage"
            android:importantForAutofill="no" />
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/monthlyRadioGroup">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recur on the 18th"
            android:id="@+id/radioButtonStatic"
            tools:ignore="HardcodedText" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recur on the 3rd Monday"
            android:id="@+id/radioButtonDynamic"
            tools:ignore="HardcodedText" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recur Specific Days"
            android:id="@+id/recurSpecificDays"
            tools:ignore="HardcodedText" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/recurDaysLayout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recurDaysPrompt"
            style="@style/subheader"
            android:text="Days to recur on: "
            tools:ignore="HardcodedText" />
        <EditText
            android:inputType="textShortMessage"
            android:id="@+id/recurDaysEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:hint="@string/recur_days_hint"
            android:textSize="@dimen/subheader_height"
            tools:ignore="SpUsage"
            android:importantForAutofill="no" />
    </LinearLayout>

</LinearLayout>