<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:layout_marginTop="6dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/projectGoalTextView"
            android:layout_width="match_parent"
            android:text="Get an A in the class."
            android:layout_height="wrap_content"
            style="@style/item_name"
            tools:ignore="HardcodedText" />

        <com.google.android.material.chip.Chip
            android:clickable="false"
            android:id="@+id/projectChip"
            app:chipMinTouchTargetSize="0dp"
            app:chipCornerRadius="12dp"
            app:chipMinHeight="26dp"
            android:text="CSCI 4011"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <ImageButton
        android:layout_weight="0"
        android:id="@+id/buttonExpandProject"
        android:layout_height="32dp"
        app:tint="@color/text_primary"
        android:background="@null"
        android:scaleType="fitXY"
        android:contentDescription="@string/right_arrow"
        android:src="@drawable/ic_baseline_chevron_right_32"
        android:layout_width="32dp"/>

</LinearLayout>