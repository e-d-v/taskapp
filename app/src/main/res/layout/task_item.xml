<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="8dp"
    android:layout_marginTop="6dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/buttonComplete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="fitXY"
        android:layout_marginEnd="6dp"
        android:contentDescription="@string/unchecked_button_desc"
        android:background="#0000"
        android:src="@drawable/ic_unchecked_button" />

    <TextView
        android:id="@+id/taskName"
        android:text="Example Task\n(8 minutes to complete)"
        style="@style/item_name"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="end">
        <ImageButton
            android:id="@+id/buttonDeleteTask"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/desc_delete_button"
            android:background="#0000"
            android:src="@drawable/ic_delete_24" />

    </LinearLayout>
</LinearLayout>