<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6dp"
    tools:context=".TaskEntry"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextTaskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/task_name"
        android:inputType="textShortMessage" />

    <EditText
        android:id="@+id/editTextECD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/ecd"
        android:inputType="date" />

    <EditText
        android:id="@+id/editTextDueDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/due_date"
        android:inputType="date" />

    <EditText
        android:id="@+id/editTextTTC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/ttc"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textViewSpinnerPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/parent_tasks"/>
        <Spinner
            android:id="@+id/spinnerParents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/parent_tasks"
            android:spinnerMode="dialog" />
    </LinearLayout>

</LinearLayout>