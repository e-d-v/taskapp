<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/reoccurHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reoccur_header"
        style="@style/subheader"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/recurLL"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reoccurHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:layout_marginTop="4dp"
            android:entries="@array/reoccur_names"
            android:id="@+id/reoccurSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:layout_marginTop="4dp"
            android:entries="@array/timespans"
            android:id="@+id/reoccurSpanSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/recurLL"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="@string/recur_times"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/recurTSET"/>


    <FrameLayout
        app:layout_constraintTop_toBottomOf="@id/recurTSET"
        app:layout_constraintBottom_toTopOf="@id/submitButton"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/contentFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <Button
        android:id="@+id/submitButton"
        app:layout_constraintTop_toBottomOf="@id/contentFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"/>

</androidx.constraintlayout.widget.ConstraintLayout>