<resources>
    <!-- Base application theme. -->
    <style name="Theme.Taskapp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/taskapp_green</item>
        <item name="colorPrimaryVariant">@color/taskapp_green</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/taskapp_secondary</item>
        <item name="colorSecondaryVariant">@color/taskapp_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:actionMenuTextColor">@color/black</item>
    </style>

    <style name="Theme.Taskapp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Taskapp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Theme.Taskapp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="actionButtonWidth">
        <item name="android:width">?attr/actionBarSize</item>
    </style>
</resources>